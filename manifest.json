{
  "manifest_version": 3,
  "name": "Spoiler Detection",
  "version": "1.0",
  "description": "A Chrome extension that detects and hides spoilers on webpages.",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
